<div class='content-header'>
  <div class='container-fluid'>
    <div class='row mb-2'>
      <div class='col-sm-6'>
        <h1 class='m-0'>Thêm quản trị viên</h1>
      </div>
      <div class='col-sm-6'>
        <ol class='breadcrumb float-sm-right'>
          <li class='breadcrumb-item'><a href=' http://123.30.149.20/admin/home '>Trang chủ</a></li>
          <li class='breadcrumb-item'><a href=' http://123.30.149.20/admin/users '>Danh sách quản trị viên</a></li>
          <li class='breadcrumb-item active'>Thêm quản trị viên</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<section class='content'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-md-12'>
        <div class='card card-primary'>
          <div class='card-header'>
            <h3 class='card-title'>Thông tin quản trị viên</h3>
          </div>
          {{#if data.error}}
            <div class='alert alert-danger' role='alert'>{{data.error}}</div>
          {{/if}}

          {{#if flashMessage}}
            <div class='flash-message'>
              {{flashMessage}}
            </div>
          {{/if}}
          <form method='post' enctype='multipart/form-data' action='/admin/users'>
            <div class='card-body'>
              <div class='form-group'>
                <label class='mb-2'><span class='text-danger'>*</span>Name</label>
                <input type='text' name='name' class='form-control' placeholder='Name' value='' />
              </div>
              {{#if data.errors.name}}
                <div class='text-danger'>{{data.errors.name}}</div>
              {{/if}}
              <div class='form-group'>
                <label class='mb-2'><span class='text-danger'>*</span>Tên đầy đủ</label>
                <input type='text' name='age' class='form-control' placeholder='Age' value='' />
              </div>
              {{#if data.errors.age}}
                <div class='text-danger'>{{data.errors.age}}</div>
              {{/if}}
            </div>
            <div class='card-footer d-flex flex-row-reverse'>
              <button type='submit' class='btn btn-primary'>Thêm mới</button>
            </div>
          </form>
        </div>
      </div>
      <div class='col-md-6'>
      </div>
    </div>
  </div>
</section>